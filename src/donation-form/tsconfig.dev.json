{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "outDir": "./build",
    "importHelpers": false,
    "noEmitHelpers": false,
    "rootDir": "src",
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "exclude": ["**/*.js.map", "**/*.json"],
  "include": ["./src/**/*.ts"]
}
